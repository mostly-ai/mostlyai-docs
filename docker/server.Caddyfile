:8888 {
	log default
	encode

	metrics /metrics
	handle_path /healthz {
		respond 200
	}

	@doubleDocs path_regexp doublerewrite ^/docs/docs(.*)$
	rewrite @doubleDocs /docs{http.regexp.doublerewrite.1}

	redir / /docs
	handle_path /docs* {
		root * /app/html
		file_server
		try_files {path} {path}.html
	}
}
